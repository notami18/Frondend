Gris_oscuro = #444
gris_texto = #7A7A7A
azul = #22BCE0
naranja = #DD4F24

@font-face {
	font-family: 'iconitos';
	src:url('../fonts/icomoon.eot?-riv8m8');
	src:url('../fonts/icomoon.eot?#iefix-riv8m8') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-riv8m8') format('woff'),
		url('../fonts/icomoon.ttf?-riv8m8') format('truetype'),
		url('../fonts/icomoon.svg?-riv8m8#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

a
	color naranja

body
	background #E8E8E8
	color Gris_oscuro
	font-family Arial
	font-size 16px
	
footer
	width 100%
	background naranja
	padding 1em 0
	color rgba(white, 0.5)
	text-align center
	
	h3
		font-size 14px
		font-weight normal
		
		strong 
			display block
			
		.mejor
			&:after
			&:before
				content " - "
		
header
	background Gris_oscuro
	box-shadow 0 5px 0 RGBA(0,0,0,0.2) 
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 1
	
	.logo
		border-right 1px solid azul
		float left
		width 60px
		
		img
			width 52px
			
	.titular
		margin 0 60px 0 70px
		.filtro
			color azul
			font-size 14px
			font-weight bold
			font-style italic
			text-decoration none
		.publicar
			background naranja
			color white
			float right
			font-style italic
			margin -5px 1em 0 0 // arriba derecha abajo izquierda
			padding 0.2em 0.5em
			text-decoration none
			text-shadow 1px 1px 0px black
			
			&:before
				display inline-block
				content "\e908"
				font-family "iconitos"
				margin 0 3px 0 0

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1.1em 0 0
			position relative
			z-index 2
			img
				width 50px
				border-radius 50%
		.flechita
			background naranja
			color white
			display block 
			padding 2px
			position absolute
			right 0
			top 15px
			text-align right
			width 50%
			text-decoration none
			
			&:after
				content "\e600"
				font-family "iconitos"
				text-shadow 1px 1px 0 black
	
nav
	background azul
	border-left solid 15px white
	position relative
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent
		content ""
		top 0
		position absolute
		left 0
	.menu
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block
			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none

.posts
	padding 0.5em
	
	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em
		
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			
			.datos
				float right
				
				.comentarios
					background gris_texto
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					
				.estrellita
					text-decoration none
					
					&:after
						font-family "iconitos"
						color #d7d40e
						content "\e9d9"
						font-size 1.1em
				
			.votos
				float left
				
				.down
				.up
					text-decoration none
					text-decoration none
					&:before
						font-family "iconitos"
						font-size 1.5em
						vertical-align middle
				
				.down
					color red
					&:before
						//font-family "iconitos"
						//font-size 1.5em
						content "\e600"
						//vertical-aling bottom
					
				.up
					color green
					&:before
						//font-family "iconitos"
						//font-size 1.5em
						content "\e601"
						//vertical-aling bottom
		
		.descripcion
			color gris_texto
			
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
					
				.fecha 
					float right
					margin 0 1em 0 0
				
				.tag
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_texto
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0
			
			.imagen
				float left
				margin 0
				img
					height 160px
					vartical-inline top
					width 120px
					
@media screen and (min-width: 768px)

	header
		.titular
			.publicar
				position relative
				padding-left 3em
				
				&:before
					left 0px
					position absolute
					font-size 2.5em
					top -10px
	
	.posts
		.post
			display inline-block
			width 48%
			vertical-align top
			&:nth-child(odd)
				margin-right 2%
	
	
